# LinkedIn Comment Generator - Configuration

# GEMINI AI (Required)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_ANALYSIS_MODEL=gemini-1.5-flash-latest
GEMINI_GENERATION_MODEL=gemini-1.5-flash-latest

# RAPIDAPI (Required for real data)
RAPIDAPI_KEY=your_rapidapi_key_here
RAPIDAPI_BASE_URL=https://linkedin-scraper-api-real-time-fast-affordable.p.rapidapi.com
RAPIDAPI_HOST=linkedin-scraper-api-real-time-fast-affordable.p.rapidapi.com

# Data Source (rapidapi or mock)
DATA_SOURCE=rapidapi

# System Settings
MAX_TOKENS=3000
TEMPERATURE=0.7
MAX_POSTS_FETCH=30
MAX_COMMENTS_ANALYZE=50
DATABASE_URL=sqlite:///./linkedin_comments.db
DEBUG=False

# SETUP:
# 1. Copy: cp .env.example .env
# 2. Add your API keys
# 3. Save and restart